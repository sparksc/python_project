* {
	font-family: '微软雅黑';
	font-size: 12px;
	color: #323232;
}

.clear-fix {
	clear: both;
}

.border-box {
	border: 1px solid #91a8b3;
	height: 34px;
	float: left;
	border-radius: 4px;
	width: 277px;
}

.small-border-box {
	border: 1px solid #91a8b3;
	height: 34px;
	float: left;
	border-radius: 4px;
	/*width: 277px;*/
}

.bigger-border-box {
	border: 1px solid #91a8b3;
	height: 34px;
	float: left;
	border-radius: 4px;
	width: 710px;
}



.border-spacing {
	margin-top: 20px;
	margin-right: 20px;
}

.border-spacing-small {
	margin-top: 20px;
	width: 162px;
	height: 100%;
	float: left;
}

.border-spacing-img {
	float: left;
	margin-top: 8px;
	margin-left: 5px;
}

.normal-label {
	background-color: #f3f8fc;
	border: none;
	border-right: 1px solid #91A8B3;
	line-height: 34px;
	text-align: center;
	float: left;
	border-bottom-left-radius: 4px;
	border-top-left-radius: 4px;
	font-weight: normal;
	padding: 0 10px;
	font-size: 14px;
}

.bigger-label{
	background-color: #f3f8fc;
	border: none;
	border-right: 1px solid #91A8B3;
	line-height: 34px;
	text-align: center;
	float: left;
	border-bottom-left-radius: 4px;
	border-top-left-radius: 4px;
	font-weight: normal;
	width: 105px;
	font-size: 14px;
}

.normal-input {
	float: left;
	border: none;
	padding: 4px;
	height: 34px;
	width: 200px;
}

.small-input {
	float: left;
	border: none;
	height: 32px;
	width: 120px;
	padding-left: 10px;
	border-radius: 4px;
	background-color: #f5f5f5;
	transition: border-color ease-in-out .15s, box-shadow ease-in-out .15s;
}

.small-select {
	float: left;
	border: none;
	width: 200px;
	height: 34px;
	padding: 4px 12px;
	background-color: #fff;
	border-radius: 4px;
	transition: border-color ease-in-out .15s, box-shadow ease-in-out .15s;
}

.bigger-select {
	float: left;
	border: none;
	width: 600px;
	height: 34px;
	padding: 4px 12px;
	background-color: #fff;
	border-radius: 4px;
	transition: border-color ease-in-out .15s, box-shadow ease-in-out .15s;
}

.form-control {
	display: block;
	font-size: 14px;
	line-height: 1.42857143;
	color: #555;
}

.card-box {
	width: 500px;
	height: 240px;
	border-radius: 4px;
	border: 1px solid #91a8b3;
	float: left;
}

.card-imgbox {
	float: left;
	width: 150px;
	height: 200px;
	border-radius: 4px;
	border: 1px solid #91a8b3;
	margin: 20px 8px 20px 20px;
}

.card-content {
	float: left;
	width: 300px;
	height: 200px;
	border-radius: 4px;
	border: 1px solid #91a8b3;
	margin-top: 20px;
}